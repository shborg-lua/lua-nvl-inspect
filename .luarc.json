{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "diagnostics.disable": [
    "duplicate-set-field"
  ],
  "diagnostics.globals": [
    "vim",
    "jit",
    "it",
    "describe",
    "before_each",
    "after_each",
    "spy",
    "setup",
    "teardown",
    "done",
    "await",
    "async",
    "wait",
    "P",
    "PL",
    "stub",
    "spy",
    "insulate",
    "expose",
    "LazyVim"
  ],
  "diagnostics.severity": {
    "undefined-field": "Hint"
  },
  "runtime.version": "LuaJIT",
  "type.castNumberToInteger": true,
  "type.weakUnionCheck": true,
  "workspace.library": [
    "spec/helpers/types.lua"
  ],
  "workspace.ignoreDir": [
    "/scratch",
    "/.tmp",
    "/build/*/share/lua/*/nvl",
    "/packages"
  ]
}
